source 'https://rubygems.org'

# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '5.1.4'
# Use bcrypt for secure passwords
gem 'bcrypt', '3.1.11'
# Use faker for generate fake data: names, addresses, phone numbers, etc.
gem 'faker', '1.7.3'
# Use carrierwave
gem 'carrierwave', '1.2.2'
# Use mini_magick for manipulate images with minimal use of memory via ImageMagick / GraphicsMagick
gem 'mini_magick', '4.7.0'
# Use will_paginate for provides a simple API for performing paginated queries with Active Record
gem 'will_paginate', '3.1.6'
# Use bootstrap-will_paginate
gem 'bootstrap-will_paginate', '1.0.0'
# Use bootstrap-sass
gem 'bootstrap-sass', '3.3.7'
# Use Puma as the app server
gem 'puma', '3.9.1'
# Use SCSS for stylesheets
gem 'sass-rails', '5.0.6'
# Use Uglifier as compressor for JavaScript assets
gem 'uglifier', '3.2.0'
# See https://github.com/rails/execjs#readme for more supported runtimes
# gem 'therubyracer', platforms: :ruby
# Use CoffeeScript for .coffee assets and views
gem 'coffee-rails', '4.2.2'
# Use jquery
gem 'jquery-rails', '4.3.1'
# Turbolinks makes navigating your web application faster. Read more: https://github.com/turbolinks/turbolinks
gem 'turbolinks', '5.0.1'
# Build JSON APIs with ease. Read more: https://github.com/rails/jbuilder
gem 'jbuilder', '2.7.0'

# Use Nokogiri
gem 'nokogiri', '1.10.1'
# Use mechanize
gem 'mechanize', '2.7.6'

group :development, :test do
  # Use sqlite3 as the database for Active Record
  gem 'sqlite3', '1.3.13'
  # Call 'byebug' anywhere in the code to stop execution and get a debugger console
  gem 'byebug', platforms: :mri
end

group :development do
  # Access an IRB console on exception pages or by using <%= console %> anywhere in the code.
  gem 'web-console', '3.5.1'
  gem 'listen', '3.1.5'
  # Spring speeds up development by keeping your application running in the background. Read more: https://github.com/rails/spring
  gem 'spring', '2.0.2'
  gem 'spring-watcher-listen', '2.0.1'
end

group :test do
  gem 'rails-controller-testing', '1.0.2'
  gem 'minitest-reporters', '1.1.14'
  gem 'guard', '2.14.1'
  gem 'guard-minitest', '2.4.6'
end

group :production do
  gem 'pg', '0.20.0'
  gem 'fog', '1.42'
end

# Windows does not include zoneinfo files, so bundle the tzinfo-data gem
gem 'tzinfo-data', platforms: [:mingw, :mswin, :x64_mingw, :jruby]
